<h1>All users detail </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
       <th>Gender</th>
       <th>Show</th>
       <th>Delete</th>
       <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
      
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>   
        <td><%= link_to 'click ', user_path(user) %></td>
        <td><%= link_to 'click ', user_path(user),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
        <td><%= link_to 'click ', edit_user_path(user) %></td> 
    </tr>
    <% end %>
  </tbody>
</table>
</br>

<div>
  <%= link_to 'Create new user', new_user_path %>
</div>


